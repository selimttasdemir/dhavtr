{
    "name": "hancer-law/backend-php",
    "description": "PHP Backend for Hancer Law Firm Website",
    "version": "1.0.0",
    "type": "project",
    "authors": [
        {
            "name": "Hancer Law Firm",
            "email": "info@hancer.av.tr"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "HancerLaw\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8000 index.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}